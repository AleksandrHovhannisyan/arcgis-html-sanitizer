{
  "name": "@esri/arcgis-sanitize-html",
  "version": "0.1.0",
  "description":
    "A simple utility to sanitize a string according to ArcGIS supported HTML specification.",
  "main": "index.js",
  "repository": "https://github.com/Esri/arcgis-sanitize-html.git",
  "author": "Esri",
  "license": "Apache-2.0",
  "private": true,
  "scripts": {
    "lint": "tslint --project tsconfig.json",
    "lint:fix": "tslint --project tsconfig.json --fix",
    "test": "jest --coverage",
    "test:watch": "jest --coverage --watch"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "skipBabel": true
      }
    },
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"]
  },
  "dependencies": {
    "xss": "^0.3.7"
  },
  "devDependencies": {
    "@types/jest": "^22.2.0",
    "jest": "^22.4.2",
    "ts-jest": "^22.4.1",
    "tslint": "^5.9.1",
    "tslint-config-prettier": "^1.9.0",
    "tslint-config-standard": "^7.0.0",
    "typescript": "^2.7.2",
    "typings": "^2.1.1"
  }
}
